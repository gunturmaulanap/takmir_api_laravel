{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["php82", "php82Extensions.redis", "php82Extensions.pgsql", "php82Extensions.mbstring", "php82Extensions.intl", "php82Extensions.pcov", "php82Extensions.zip", "php82Extensions.apcu", "php82Extensions.dom", "php82Extensions.exif", "php82Extensions.fileinfo", "php82Extensions.filter", "php82Extensions.ftp", "php82Extensions.gettext", "php82Extensions.hash", "php82Extensions.iconv", "php82Extensions.json", "php82Extensions.libxml", "php82Extensions.openssl", "php82Extensions.pcntl", "php82Extensions.pdo", "php82Extensions.pdo_pgsql", "php82Extensions.pdo_sqlite", "php82Extensions.posix", "php82Extensions.session", "php82Extensions.simplexml", "php82Extensions.sockets", "php82Extensions.sqlite3", "php82Extensions.tokenizer", "php82Extensions.xml", "php82Extensions.xmlreader", "php82Extensions.xmlwriter", "php82Extensions.zlib", "composer"]
        },
        "install": {
          "cmds": [
            "composer install --optimize-autoloader --no-dev",
            "chmod +x deploy.sh",
            "./deploy.sh"
          ]
        },
        "build": {
          "cmds": [
            "echo 'Build completed successfully'"
          ]
        }
      },
      "providers": ["php"],
      "startCommand": "php artisan serve --host=0.0.0.0 --port=${PORT:-8000}"
    }
  }
}